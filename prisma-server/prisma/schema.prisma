generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Primary Key, 유저의 식별키 - 주민등록 번호 같은 느낌
  name      String // 정영훈 한국 엄청 많다 -> 88~~~~ 인사람 나와 -> 제가 나간다.
  gender    String
  createdAt DateTime @default(now())
  orders    Order[] // 관계 정의
}


model Order {
  orderId   Int    @id @default(autoincrement())
  orderName String
  userId    Int
  author    User   @relation(fields: [userId], references: [id])
}

